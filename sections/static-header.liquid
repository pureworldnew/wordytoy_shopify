{% schema %}
{
  "name": "Header",
  "class": "site-header-wrapper",
  "settings": [
    {
      "id": "sticky_header",
      "type": "checkbox",
      "label": "Enable sticky header",
      "default": false
    },
    {
      "id": "logo",
      "type": "image_picker",
      "label": "Logo image",
      "info": "200 x 100px .png recommended"
    },
    {
      "id": "logo_height",
      "type": "range",
      "label": "Logo image max-height",
      "min": 50,
      "max": 150,
      "step": 1,
      "unit": "px",
      "default": 50
    },
    {
      "id": "logo_width",
      "type": "range",
      "label": "Logo image max-width",
      "min": 100,
      "max": 200,
      "step": 1,
      "unit": "px",
      "default": 125
    },
    {
      "type": "header",
      "content": "Navigation"
    },
    {
      "id": "main_menu",
      "type": "link_list",
      "label": "Main menu",
      "default": "main-menu"
    },
    {
      "type": "select",
      "id": "navigation_layout",
      "label": "Navigation layout",
      "options": [
        {
          "value": "drawer",
          "label": "Drawer"
        },
        {
          "value": "expanded",
          "label": "Expanded"
        }
      ],
      "default": "expanded",
      "info": "When the navigation layout is set to 'Expanded,' navigation will collapse into the 'Drawer' if there is not enough space."
    },
    {
      "type": "header",
      "content": "Story"
    },
    {
      "id": "story_handle",
      "type": "page",
      "label": "Story page",
      "info": "Choose your Story page. This page must have \"page.story\" as the template. [Click here for more information about how to set this up](http:\/\/support.pixelunion.net\/article\/448-reachs-story-feature)."
    }
  ],
  "blocks": [
    {
      "type": "story",
      "name": "Story notification",
      "limit": 1,
      "settings": [
        {
          "type": "paragraph",
          "content": "Add some text and an image to highlight your Story."
        },
        {
          "id": "image",
          "type": "image_picker",
          "label": "Image",
          "info": "200 x 200px recommended"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "caption",
          "label": "Caption"
        }
      ]
    }
  ]
}



{% endschema %}