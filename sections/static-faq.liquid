<script
  type="application/json"
  data-section-id="{{ section.id }}"
  data-section-type="static-faq"
>
</script>

{% if section.blocks.size > 0 %}
  <ul class="tabs faq-triggers">
    {% for block in section.blocks %}
      <li
        class="faq-heading {% if forloop.index0 == 0 %}active{% endif %}"
        {{ block.shopify_attributes }}
      >
        <span class="faq-title">
          {{ block.settings.title | escape }}
        </span>

        <div class="faq-button">
          {% include 'icons', id: 'chevron' %}
          {% include 'icons', id: 'minus' %}
        </div>
      </li>
    {% endfor %}
  </ul>

  <ul class="tabs-content">
    {% for block in section.blocks %}
      <li
        class="faq-content {% if forloop.index0 == 0 %}active{% endif %}"
      >
        <div class="rte">
          {{ block.settings.content }}
        </div>
      </li>
    {% endfor %}
  </ul>
{% endif %}

