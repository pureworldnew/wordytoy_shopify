{% assign share_url = social_url | url_param_escape %}
{% assign share_title = social_title | url_param_escape %}
{% assign share_image = social_image | url_param_escape %}

<aside
  class="
    share-buttons
    {% if share_class != blank %}
      {{ share_class }}
    {% endif %}
  "
>
  {% if show_title %}
    <span class="share-buttons-title">
      {{ 'general.sharing.title' | t }}
    </span>
  {% endif %}

  <a
    class="share-button share-button-facebook"
    target="_blank"
    href="//www.facebook.com/sharer.php?u={{ share_url }}">
    {%-
      include 'icons',
      id: 'facebook'
    -%}
    <span class="show-for-sr">{{ 'general.sharing.share_on_facebook' | t }}</span>
  </a>

  <a
    class="share-button share-button-twitter"
    target="_blank"
    href="//twitter.com/share?url={{ share_url }}">
    {%-
      include 'icons',
      id: 'twitter'
    -%}
    <span class="show-for-sr">{{ 'general.sharing.share_on_twitter' | t }}</span>
  </a>

  <a
    class="share-button share-button-google"
    target="_blank"
    href="//plus.google.com/share?url={{ share_url }}">
    {%-
      include 'icons',
      id: 'google'
    -%}
    <span class="show-for-sr">{{ 'general.sharing.share_on_google' | t }}</span>
  </a>

  {% if share_image != blank %}
    {%- capture pinterest_url -%}
      //pinterest.com/pin/create/button/
      ?url={{ share_url }}
      &description={{ share_title }}
      &media={{ share_image }}
    {%- endcapture -%}
    <a
      class="share-button share-button-pinterest"
      target="_blank"
      href="{{ pinterest_url | strip_newlines | replace: ' ', '' }}">
      {%-
        include 'icons',
        id: 'pinterest'
      -%}
      <span class="show-for-sr">{{ 'general.sharing.share_on_pinterest' | t }}</span>
    </a>
  {% endif %}
</aside>

