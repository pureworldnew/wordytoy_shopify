<article class="site-page background-alternate">
  <header class="page-masthead">
    <h1 class="page-title">
      {{ 'account.activate.title' | t }}
    </h1>
  </header>

  <div class="page-container">
    <div class="page-content rte">
      <div class="account-activate">
        {% form 'activate_customer_password' %}
          {% if form.errors %}
            {{ form.errors | default_errors }}
          {% endif %}

          {% assign account_activate_password_password_label = 'account.activate.password' | t %}
          {%
            include 'form-elements',
            id: 'password',
            name: 'customer[password]',
            type: 'password'
            label: account_activate_password_password_label
          %}

          {% assign account_activate_password_repeat_password_label = 'account.activate.repeat_password' | t %}
          {%
            include 'form-elements',
            id: 'password-repeat',
            name: 'customer[password_confirmation]',
            type: 'password'
            label: account_activate_password_repeat_password_label
          %}

          {% assign account_activate_password_submit_value = 'account.activate.submit' | t %}
          {%
            include 'form-elements',
            secondary: true,
            type: 'submit'
            value: account_activate_password_submit_value
          %}

          <a href="/">{{ 'account.activate.decline' | t }}</a>
        {% endform %}
      </div>
    </div>
  </div>

  {%
    include 'patterns',
    size: 'large',
    class: 'page-content-pattern'
  %}
</article>
