<article class="site-page background-alternate">
  <header class="page-masthead">
    <h1 class="page-title">
      {{ 'account.register.title' | t }}
    </h1>
  </header>

  <div class="page-container">
    <div class="page-content rte">
      <div class="account-register">
        {% form 'create_customer' %}
          {% if form.errors %}
            {{ form.errors | default_errors }}
          {% endif %}

          {% assign account_register_first_name_label = 'account.register.first_name' | t %}
          {%
            include 'form-elements',
            id: 'customer_first_name',
            name: 'customer[first_name]',
            type: 'text'
            value: form.first_name,
            label: account_register_first_name_label
          %}

          {% assign account_register_last_name_label = 'account.register.last_name' | t %}
          {%
            include 'form-elements',
            id: 'customer_last_name',
            name: 'customer[last_name]',
            type: 'text'
            value: form.last_name,
            label: account_register_last_name_label
          %}

          {% assign account_register_email_label = 'account.register.email' | t %}
          {%
            include 'form-elements',
            id: 'customer_email',
            name: 'customer[email]',
            type: 'text'
            value: form.email,
            label: account_register_email_label
          %}

          {% assign account_register_password_label = 'account.register.password' | t %}
          {%
            include 'form-elements',
            id: 'customer_password',
            name: 'customer[password]',
            type: 'password'
            label: account_register_password_label
          %}

          {% assign account_register_submit_value = 'account.register.submit' | t %}
          {%
            include 'form-elements',
            secondary: true,
            type: 'submit'
            value: account_register_submit_value
          %}
        {% endform %}

        <div class="account-register-signin">
          <span class="account-register-signin-cta">
            {{ 'account.register.signin' | t }}
          </span>
          <a
            class="account-register-signin-link"
            href="/account/login"
          >
            {{ 'account.register.signin_now' | t }}
          </a>
        </div>
      </div>
    </div>
  </div>

  {%
    include 'patterns',
    size: 'large',
    class: 'page-content-pattern'
  %}
</article>
